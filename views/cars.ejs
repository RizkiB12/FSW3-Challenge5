<div class="d-flex justify-content-between">
    <h3>
       <b>List Cars</b>
    </h3>
    <a href="/cars/add">
    <button type="button" class="btn btn-primary">
        + Add New Car
    </button>
    </a>
</div>

<div class="mt-3">
    <button class="btn btn-outline-primary p"><a href=""></a>All</button>
    <button class="btn btn-outline-primary"><a href=""></a>Small</button>
    <button class="btn btn-outline-primary"><a href=""></a>Medium</button>
    <button class="btn btn-outline-primary"><a href=""></a>Large</button>
</div>

<div class="row m-0 p-0 mt-3">
    <% newCars.forEach(car => { %>
    <div class="col-md-4 p-2">
        <div class="card">
            <img src="<%= car.image %>" alt="" class="card-img-top">
            <div class="card-body">
                <p><%= car.name %></p>
                <p class="fw-bold">Rp. <%= car.price %> / day</p>
                <p class="text-secondary"><i class="fa fa-clock-o"></i>Updated at <%= car.day %> <%= car.month %> <%= car.year %>, <%= car.hour %>.<%= car.minute %></p>
                <div class="d-inline-flex gap-2">
                    <form action="/cars/delete/<%= car.id %>?_method=DELETE" method="post">
                        <button class="btn btn-outline-danger" type="submit"><i class="fa fa-trash"></i> Delete</button>
                      </form>
                   <a href="/cars/edit/<%= car.id %>"><button class="btn btn-success text-white"><i class="fa fa-edit"></i> Edit</button></a>
                </div>
            </div>
        </div>
    </div>
    <% }) %>
</div>